<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <useStyles filename="nifty-default-styles.xml" />
  <useControls filename="nifty-default-controls.xml" />
  
  <screen id="options" controller="mygame.gui.MyOptionsScreen">
    <layer id="foreground" childLayout="vertical">
      <panel id="separator" height="10%" />
      <panel id="panel_top" backgroundColor="#336" height="80%" width="75%" align="center" valign="center" childLayout="vertical">
        <panel id="title" height="10%" width="50%" align="center" childLayout="center">
          <control name="label" text="Options Menu" />
        </panel>
        
        <panel id="choose_engine" backgroundColor="#0809" height="40%" width="100%" childLayout="vertical">
            <control name="label" text="Engine Type" />
            <control id="RadioGroup-1" name="radioButtonGroup"/>
            <panel childLayout="horizontal" align="center">

              <panel backgroundColor="#8006" childLayout="vertical" paddingLeft="7px" paddingRight="7px" paddingTop="4px" paddingBottom="4px" width="65%">
                <effect>
                  <onActive name="border" color="#0008" />
                </effect>
                <panel childLayout="horizontal">
                  <control name="label" text="PW2037" width="100px" />
                  <control name="radioButton" id="PW2037" group="RadioGroup-1" />
                </panel>
                <panel childLayout="horizontal">
                  <control name="label" text="PW2040" width="100px" />
                  <control name="radioButton" id="PW2040" group="RadioGroup-1" />
                </panel>
                <panel childLayout="horizontal">
                  <control name="label" text="RB211-535E4B" width="100px" />
                  <control name="radioButton" id="RB211" group="RadioGroup-1" />
                </panel>
                <panel childLayout="horizontal">
                  <control name="label" text="Custom" width="100px" />
                  <control name="radioButton" id="custom" group="RadioGroup-1" />
                  <panel childLayout="horizontal" width="100%">
                    <control name="label" width="25%" text="Fan Diam (m)" />
                    <control name="textfield" text="0" width="10%" id="engine-customDiameter" />
                    <control name="label" width="25%" text="Mass Flow (kg/s)" />
                    <control name="textfield" text="0" width="10%" id="engine-customMass" />
                  </panel>
                </panel>
              </panel>
                <panel id="desc" childLayout="vertical" width="35%">
                    <panel id="fan-diameter" width="100%" childLayout="horizontal">
                        <control name="label" width="60%" text="Fan Diameter (m)"/>
                        <control name="label" id="fan_diameter" width="40%" text="5.43"/>
                    </panel>
                    <panel id="massflow" width="100%" childLayout="horizontal">
                        <control name="label" width="60%" text="Mass Flow Rate (kg/s)"/>
                        <control name="label" id="mass_flow" width="40%" text="432"/>
                    </panel>
                </panel>
              
            </panel>
            
        </panel>
        <panel id="choose_weather" backgroundColor="#0089" height="40%" width="100%" childLayout="vertical">
            <control name="label" text="Weather Data" />
            <control id="RadioGroup-2" name="radioButtonGroup"/>
            <panel childLayout="horizontal" align="center">

              <panel backgroundColor="#8006" childLayout="vertical" paddingLeft="7px" paddingRight="7px" paddingTop="4px" paddingBottom="4px" width="65%">
                <effect>
                  <onActive name="border" color="#0008" />
                </effect>
                <panel childLayout="horizontal">
                  <control name="label" text="Live Weather" width="100px" />
                  <control name="radioButton" id="live_wx" group="RadioGroup-2" />
                  <panel childLayout="horizontal" width="100%">
                    <control name="label" width="25%" text="Airport ICAO" />
                    <control name="textfield" text="EGPF" width="10%" id="airportIdentifier" />

                    <control name="button" label="Check" width="20%" id="airportCheck" >
                       <interact onClick="getAirportData()"/>
                    </control>
                  </panel>
                </panel>
                <panel childLayout="horizontal">
                  <control name="label" text="ISA" width="100px" />
                  <control name="radioButton" id="ISA_wx" group="RadioGroup-2" />
                </panel>
                <panel childLayout="horizontal">
                  <control name="label" text="Custom" width="100px" />
                  <control name="radioButton" id="custom_wx" group="RadioGroup-2" />
                </panel>
              </panel>
                <panel id="desc" childLayout="vertical" width="35%">
                    <panel width="100%" childLayout="horizontal">
                        <control name="label" width="60%" text="Temperature (C)"/>
                        <control name="label" id="temp_wx" width="40%" text="15"/>
                    </panel>
                    <panel width="100%" childLayout="horizontal">
                        <control name="label" width="60%" text="Pressure (mbar)"/>
                        <control name="label" id="pressure_wx" width="40%" text="432"/>
                    </panel>
                </panel>
              
            </panel>
            
        </panel>
        <panel height="10%" width="20%" childLayout="horizontal" align="center">
            <control name="button" label="Submit" id="airportCheck" />
        </panel>
      </panel>
      
    </layer>
  </screen>
    
</nifty>