<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <useStyles filename="nifty-default-styles.xml" />
  <useControls filename="nifty-default-controls.xml" />
  
  <screen id="options" controller="mygame.gui.MyOptionsScreen">
    <layer id="foreground" childLayout="vertical">
      <panel id="separator" height="10%" />
      <panel id="panel_top" backgroundColor="#336" height="80%" width="75%" align="center" valign="center" childLayout="vertical">
        <panel id="title" height="10%" width="50%" align="center" childLayout="center">
          <control name="label" text="Options Menu" />
        </panel>
        
        <panel id="choose_engine" height="90%" width="50%" childLayout="vertical">
            <control name="label" text="Engine Type" />
            <control id="RadioGroup-1" name="radioButtonGroup"/>
            <panel childLayout="vertical" align="center" backgroundColor="#800">

              <panel childLayout="vertical" backgroundColor="#8001" paddingLeft="7px" paddingRight="7px" paddingTop="4px" paddingBottom="4px" width="50%">
                <effect>
                  <onActive name="border" color="#0008" />
                </effect>
                <panel childLayout="horizontal">
                  <control name="label" text="PW2037" width="100px" />
                  <control name="radioButton" id="PW2037" group="RadioGroup-1" />
                </panel>
                <panel childLayout="horizontal">
                  <control name="label" text="PW2040" width="100px" />
                  <control name="radioButton" id="PW2040" group="RadioGroup-1" />
                </panel>
                <panel childLayout="horizontal">
                  <control name="label" text="RB211-535E4B" width="100px" />
                  <control name="radioButton" id="RB211" group="RadioGroup-1" />
                </panel>
              </panel>
            </panel>
            <panel id="desc" childLayout="vertical">
                <panel id="fan-diameter" childLayout="horizontal">
                    <control name="label" text="Fan Diameter (m)"/>
                    <control name="label" text="5.43"/>
                </panel>
                <panel id="massflow" childLayout="horizontal">
                    <control name="label" text="Mass Flow Rate (kg)"/>
                    <control name="label" text="432"/>
                </panel>
            </panel>
        </panel>
      </panel>
    </layer>
  </screen>
    
</nifty>